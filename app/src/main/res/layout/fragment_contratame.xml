<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_dark"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Contrátame!"
            android:textSize="22sp"
            android:textColor="#FF3C3C3C"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardBackgroundColor="#1E1E1E"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/foto_perfil"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/mi_foto"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image"
                android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waren Sánchez"
                    android:textColor="#DDDDDD"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apasionado por el desarrollo móvil, los videojuegos y los mundos bien diseñados. Me encanta construir ideas con código y narrativa."
                    android:textColor="#CCCCCC"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📧 warrensm87@gmail.com"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📱 +1 849 501 6413"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌐 www.linkedin.com/in/waren-sánchez-madé-2704472a2"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp"
                    android:autoLink="web"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>