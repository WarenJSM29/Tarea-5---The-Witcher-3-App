<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fondo_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_momento_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título del momento"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <WebView
        android:id="@+id/video_webview"
        android:layout_width="match_parent"
        android:layout_height="315dp" />

    <TextView
        android:id="@+id/txt_momento_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#DDDDDD"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Aquí irá la descripción del momento..."
        android:lineSpacingExtra="4dp" />
</LinearLayout>